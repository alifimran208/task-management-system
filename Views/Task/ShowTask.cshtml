@model List<TaskManagement.Models.TaskItem>
<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">Task List</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Task Id</th>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.TaskID</td>
                        <td>@task.TaskName</td>
                        <td>@task.Description</td>
                        <td>@task.DueDate</td>
                        <td>@task.Status</td>

                        <td>
                            <!-- Update Button -->

                            @Html.ActionLink("Update", "Edit", new { id = task.TaskID }, new { @class = "btn btn-primary" })

                        </td>
                        <td>

                            @Html.ActionLink("Remove", "Delete", new { id = task.TaskID}, new { @class = "btn btn-danger"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>