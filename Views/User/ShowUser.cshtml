@model List<TaskManagement.Models.User>
<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">User List</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>User Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.name</td>
                        <td>@user.username</td>
                        <td>@user.email</td>

                        <td>
                            @Html.ActionLink("Update", "Edit", new { id = user.Id }, new { @class = "btn btn-primary" })
                        
                            @Html.ActionLink("Remove", "Delete", new { id = user.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
