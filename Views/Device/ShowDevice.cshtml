@model List<TaskManagement.Models.Device>
<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">Task List</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Device Name</th>
                    <th>Device Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model)
                {
                    <tr>
                        <td>@device.deviceName</td>
                        <td>@device.status</td>
                        <td>
                            <!-- Update Button -->

                            @Html.ActionLink("Update", "Edit", new { id = device.Id }, new { @class = "btn btn-primary" })

                            @Html.ActionLink("Remove", "Delete", new { id = device.Id }, new { @class = "btn btn-danger" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
